{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types",
    "noEmit": true
  },
  "include": ["./src", "./test"]
}
